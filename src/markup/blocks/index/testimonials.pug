section.section-testimonials.section.section-bg
	.wrapper
		.section-body
			h2.section-testimonials-title.section-title.title.title-2.title-line= self.testimonials.title[curlang]

			p.section-testimonials-desc.section-desc= self.testimonials.desc[curlang]

			ul.testimonials-slider.snap-slider(data-snap-slider='testimonials')
				- const testimonialsImgsName = { item1: 'veronikaTimpfeevaClient', item2: 'rustamKhakimovClient', item3: 'olegDudkoClient' };
				each item, key in self.testimonials
					if key.startsWith('item')
						li.testimonials-slider-item.snap-slide(class=`testimonials-slider-${key}`)
							article.testimonials-item
								img.testimonials-item-img.img(
									src=`/media/${testimonialsImgsName[key]}.jpg`
									loading='lazy'
									alt=`photo of a client ${key.slice(-1)}`
								)
								h2.testimonials-item-title.title.title-3= item.title[curlang]

								p.testimonials-item-caption= item.caption[curlang]

								p.testimonials-item-desc.subtitle= item.desc[curlang]

			.testimonials-slider-bullets.snap-slider-nav(data-snap-slider-nav='testimonials')
				each item, key in self.testimonials
					if key.startsWith('item')
						button.testimonials-slider-bullet-btn.snap-indicator
