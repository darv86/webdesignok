section.section-myportfolio.section.section-bg
	.wrapper
		.section__body
			h2.section-myportfolio__title.section__title.title.title-2.title-line= self.myportfolio.title[curlang]

			p.section-myportfolio__desc.section__desc= self.myportfolio.desc[curlang]

			ul.myportfolio-list
				- const myportfolioImgsName = { item1: 'axasVerticalPreview-min', item2: 'gymSquarePreview-min', item3: 'autobutikSquarePreview-min', item4: 'lazHrizontalPreview-min' };
				each item, key in self.myportfolio
					if key.startsWith('item')
						li.myportfolio-item(class=`myportfolio-${key}`)
							figure.myportfolio-item__figure
								img.myportfolio-item__img.img(
									src=`/media/${myportfolioImgsName[key]}.jpg`
									alt=`thumbnail of webpage for ${item.title.en}`
									loading='lazy'
								)

								figcaption.myportfolio-item__figcaption
									h3.myportfolio-item__title.title.title-3.title-line= item.title[curlang]

									p.myportfolio-item__desc= item.desc[curlang]

									each pageName, address in self.nav.portfolio
										if item.title[curlang] === pageName[curlang]
											a.myportfolio-item__btn.btn.btn-2(href=`${basedir}portfolio/${address}/`)= self.btn.view[curlang]
