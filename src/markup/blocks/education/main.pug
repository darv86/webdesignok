main.main-pages.education-page
	.wrapper
		.main-pages-body
			ul.main-pages-items
				each item, key in self.education
					if key.startsWith('item')
						li.education-item.main-pages-item(class=`main-pages-${key}`)
							.education-item-time.main-pages-item-time.subtitle.shape(class=`education-${key}-time`)
								span.education-item-time-span= item.time[curlang]
							article.main-pages-item-body
								h3.main-pages-item-title.title.title-3= item.title[curlang]
								p.education-item-institution= item.institution[curlang]
								p.education-item-spec.main-pages-item-desc= item.spec[curlang]
								ul.main-pages-item-skills
									each skill in item.skills
										li.main-pages-item-skill= skill[curlang]

			.main-pages-links
				a.btn.btn-link.btn-2(href='')= self.btn.contact[curlang]
				a.btn.btn-link.btn-2(href='')= self.btn.download[curlang]
				a.btn.btn-link.btn-2(href='')= self.btn.viewPortfolio[curlang]
